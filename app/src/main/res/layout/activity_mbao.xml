<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewmodle"
            type="com.example.administrator.hjproject.modle.modelview.MbaoModelView"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_mbao_title"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context="com.example.administrator.hjproject.modle.activity.MbaoActivity">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="麦宝"
                android:textColor="@color/colorPrimary"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/tv_guize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:text="竞拍规则"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>


        </android.support.v7.widget.Toolbar>


        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#F8E026"
            app:tabIndicatorHeight="2dp"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/colorPrimary"/>
        <!--&lt;!&ndash;可滑动的布局内容&ndash;&gt;-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:layout_below="@+id/ll_title"
                android:id="@+id/vp_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>

            <LinearLayout
                android:background="@color/colorPrimary"
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <RelativeLayout
                    android:background="@mipmap/msg_bg"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_msg"
                        android:layout_width="14dp"
                        android:layout_height="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/msg_icon_notice"/>


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_toLeftOf="@+id/iv_clear"
                        android:layout_toRightOf="@+id/iv_msg"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:text="                        温馨提示: 谨慎参与竞价 温馨                        "
                        android:textColor="#FE7900"
                        android:textSize="12sp"
                    />

                    <ImageView
                        android:onClick="@{()->viewmodle.ClearClick()}"
                        android:id="@+id/iv_clear"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/msg_icon_forkx"/>

                </RelativeLayout>
                <!--  </android.support.v7.widget.CardView>-->

<!--
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/shape_fenge"/>
-->
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</layout>
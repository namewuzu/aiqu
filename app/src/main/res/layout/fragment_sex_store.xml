<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_marginBottom="48dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">


        <android.support.v4.widget.NestedScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.diankong.sexstory.mobile.widget.loopviewpage.AutoSwitchView
                    android:id="@+id/vp"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:layout_scrollFlags="scroll"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/recovery_default_margin_8dp"
                    android:background="@color/gray_eee"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@mipmap/ic_mrlg"
                        android:id="@+id/iv1"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:src="@mipmap/ic_mrlg"
                        android:id="@+id/iv2"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:src="@mipmap/ic_mrlg"
                        android:id="@+id/iv3"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@mipmap/pic_d"
                />

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_e"
                />

                <LinearLayout
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp"
                    android:background="#F41432"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@mipmap/ic_mrlg"
                        android:id="@+id/iv4"
                        android:scaleType="fitXY"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:src="@mipmap/ic_mrlg"
                        android:id="@+id/iv5"
                        android:scaleType="fitXY"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:src="@mipmap/ic_mrlg"
                        android:id="@+id/iv6"
                        android:scaleType="fitXY"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:src="@mipmap/ic_mrlg"
                        android:id="@+id/iv7"
                        android:scaleType="fitXY"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1" />


                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <!--<com.jude.easyrecyclerview.EasyRecyclerView-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:id="@+id/recyclerView"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"/>-->


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <ImageView
            android:id="@+id/iv_shopcar"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/gouwuche"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

    </RelativeLayout>

</layout>